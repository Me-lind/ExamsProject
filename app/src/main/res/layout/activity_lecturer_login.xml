<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lecturerLogin"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LECTURER LOGIN"
        android:id="@+id/labelLecturerLogin"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you a lecturer? Login for data entry"
        android:layout_below="@+id/labelLecturerLogin"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:id="@+id/labelQn"/>

    <EditText
        android:id="@+id/edtLecturerEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_border"
        android:paddingStart="8dp"
        android:layout_below="@+id/labelQn"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Email address"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/input_border"
        android:paddingStart="8dp"
        android:hint="Password"
        android:id="@+id/edtLecPassword"
        android:layout_below="@+id/edtLecturerEmail"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        />
    <CheckBox
        android:id="@+id/showPasswordCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Password"
        android:layout_below="@id/edtLecPassword"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:background="@drawable/background_button"
        android:id="@+id/btnLecturerLogin"
        android:layout_below="@+id/edtLecPassword"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>